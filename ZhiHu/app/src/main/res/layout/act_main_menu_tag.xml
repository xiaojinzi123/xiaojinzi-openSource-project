<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_act_main_menu_tag_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_blue"
        android:padding="@dimen/base_margin">

        <ImageView
            android:id="@+id/iv_act_main_menu_tag_icon"
            android:layout_width="@dimen/titlebar_icon_size"
            android:layout_height="@dimen/titlebar_icon_size"
            android:src="@mipmap/act_menu_tag_person" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_act_main_menu_tag_icon"
            android:layout_alignTop="@+id/iv_act_main_menu_tag_icon"
            android:layout_toRightOf="@+id/iv_act_main_menu_tag_icon"
            android:gravity="center_vertical"
            android:text="请登录"
            android:layout_marginLeft="@dimen/base_margin"
            android:textColor="@color/white"
            android:textSize="@dimen/big_text_size" />

        <LinearLayout
            android:id="@+id/ll_act_main_menu_tag_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_margin"
            android:layout_below="@+id/iv_act_main_menu_tag_icon"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_act_main_menu_collect_tag_icon"
                android:layout_width="@dimen/titlebar_icon_size"
                android:layout_height="@dimen/titlebar_icon_size"
                android:src="@mipmap/act_menu_tag_collection" />

            <TextView
                android:id="@+id/tv_act_main_menu_collect_tag_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/base_margin"
                android:text="我的收藏"
                android:textColor="@color/white"
                android:textSize="@dimen/big_text_size" />

            <ImageView
                android:layout_width="@dimen/titlebar_icon_size"
                android:layout_height="@dimen/titlebar_icon_size"
                android:layout_marginLeft="@dimen/base_margin"
                android:src="@mipmap/act_menu_tag_download" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/base_margin"
                android:text="离线下载"
                android:textColor="@color/white"
                android:textSize="@dimen/big_text_size" />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_act_main_menu_tag_home"
        android:layout_width="match_parent"
        android:background="#F0F0F0"
        android:padding="@dimen/base_margin"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_act_main_menu_tag_option"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/base_icon_size"
            android:layout_height="@dimen/base_icon_size"
            android:src="@mipmap/menu_home"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="首页"
            android:layout_marginLeft="@dimen/base_padding"
            android:textColor="@color/base_blue"
            android:textSize="@dimen/big_text_size"/>

    </LinearLayout>

</RelativeLayout>