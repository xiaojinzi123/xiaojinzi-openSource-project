<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_act_comment_comtainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cxj.zhihu.modular.comment.ui.CommentAct">

    <RelativeLayout
        android:id="@+id/rl_act_comment_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_blue"
        android:padding="@dimen/big_padding">

        <ImageView
            android:id="@+id/iv_act_comment_back"
            android:layout_width="@dimen/titlebar_icon_size"
            android:layout_height="@dimen/titlebar_icon_size"
            android:layout_centerVertical="true"
            android:src="@mipmap/arrow_left" />

        <TextView
            android:id="@+id/tv_act_comment_number"
            style="@style/base_tv_titlebar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_act_comment_back"
            android:gravity="center_horizontal"
            android:text="总共" />

    </RelativeLayout>

    <ListView
        android:id="@+id/lv_act_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_act_comment_titlebar">

    </ListView>

</RelativeLayout>
