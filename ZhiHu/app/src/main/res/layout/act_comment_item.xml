<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_act_comment_item_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/base_padding">

        <TextView
            android:id="@+id/tv_act_comment_item_comment_numner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="一条长评"
            android:textSize="22sp" />


        <ImageView
            android:id="@+id/iv_act_comment_item_menu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/act_comment_open" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_act_comment_item_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_act_comment_item_header"
        android:padding="@dimen/base_padding">

        <ImageView
            android:id="@+id/iv_act_comment_item_author_icon"
            android:layout_width="@dimen/base_icon_size"
            android:layout_height="@dimen/base_icon_size"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_act_comment_item_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_act_comment_item_author_icon"
            android:layout_alignTop="@+id/iv_act_comment_item_author_icon"
            android:layout_marginLeft="@dimen/base_margin"
            android:layout_toRightOf="@+id/iv_act_comment_item_author_icon"
            android:gravity="center_vertical"
            android:text="小金子"
            android:textSize="@dimen/base_text_size" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_act_comment_item_author_icon"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/iv_act_comment_item_author_icon"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_act_comment_item_zan"
                android:layout_width="@dimen/base_icon_size"
                android:layout_height="@dimen/base_icon_size"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@+id/tv_act_comment_item_zan"
                android:src="@mipmap/act_comment_zan" />

            <TextView
                android:id="@+id/tv_act_comment_item_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/base_margin"
                android:gravity="center_vertical"
                android:text="小金子"
                android:textSize="@dimen/base_text_size" />

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_act_comment_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_act_comment_item_author_icon"
            android:layout_marginLeft="@dimen/base_margin"
            android:layout_toRightOf="@+id/iv_act_comment_item_author_icon"
            android:text="内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容"
            android:textSize="@dimen/base_text_size" />

        <TextView
            android:id="@+id/tv_act_comment_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_act_comment_item_content"
            android:layout_marginTop="@dimen/bigger_margin"
            android:layout_toRightOf="@+id/iv_act_comment_item_author_icon"
            android:text="03-17 20:50"
            android:textSize="@dimen/base_text_size" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/iv_act_comment_item_shafa"
        android:layout_width="@dimen/bigger_icon_size"
        android:layout_height="@dimen/bigger_icon_size"
        android:layout_centerInParent="true"
        android:src="@mipmap/act_comment_shafa_day" />


</RelativeLayout>