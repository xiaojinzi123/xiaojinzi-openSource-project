<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--TextView基本的样式-->
    <style name="base_tv">
        <!--文字是白色的-->
        <item name="android:textColor">@color/white</item>
        <!--文字大小是16sp-->
        <item name="android:textSize">16sp</item>
        <!--文字默认是垂直居中-->
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--标题栏的文字的大小-->
    <style name="base_tv_titlebar" parent="base_tv">
        <item name="android:textSize">@dimen/titlebar_text_size</item>
    </style>

    <style name="base_tv_home" parent="base_tv">
        <item name="android:textSize">@dimen/base_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--设置界面的TextView的样式-->
    <style name="act_setting_tv_tag">
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textColor">#39ADA3</item>
    </style>

    <!--弹出式菜单的菜单条目的textView的样式-->
    <style name="popup_menu_item_tv">
        <item name="android:textSize">@dimen/base_text_size</item>
        <item name="android:textColor">#990000FF</item>
    </style>

    <!--activity透明的主题-->
    <style name="translucent" parent="android:Theme.Translucent">
        <item name="android:alpha">0.90</item>
    </style>

</resources>
